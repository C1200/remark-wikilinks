{
    "compilerOptions": {
        "outDir": "dist",
        "module": "esnext",
        "target": "es2017",
        "lib": ["es6", "dom", "esnext.asynciterable", "es2017"],
        "allowJs": true,
        "moduleResolution": "node",
        "rootDir": "src",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "declaration": true
    },
    "exclude": ["node_modules", "dist"]
}
